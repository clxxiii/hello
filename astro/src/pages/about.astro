---
import Nav from "../components/Nav.astro";
import Foot from "../components/Foot.astro";
const pageTitle = "About me";
const skills = ["HTML", "CSS", "Typescript"];
const skillColor = "green";
---

<head>
	<title>{pageTitle}</title>
	<style define:vars={{ skillColor }}>
		h1 {
			color: purple;
			font-size: 4rem;
		}
		.skill {
			color: var(--skillColor);
			font-weight: bold;
		}
	</style>
</head>
<body>
	<Nav />

	<h1>{pageTitle}</h1>
	<h2>... and my new Astro site!</h2>

	<p>This is the site from astro's tutorial.</p>

	<h2>Skills:</h2>
	<ul>
		{skills.map((s) => <li class="skill">{s}</li>)}
	</ul>

	<h2>Blog posts</h2>

	<ul>
		<li><a href="/posts/post-1">Post 1<a></a></a></li>
	</ul>

	<Foot />
</body>
